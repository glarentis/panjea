    </bean>
    <bean id="contoEntitaAssociatiExceptionMessageDelegate" class="it.eurotn.panjea.contabilita.rich.jms.ContoEntitaAssociatiExceptionMessageDelegate" singleton="false" lazy-init="true">
    </bean>
